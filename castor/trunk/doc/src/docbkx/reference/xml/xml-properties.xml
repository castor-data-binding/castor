						<classname>element</classname>
						or
						<classname>attribute</classname>
					</entry>
					<entry>
						<classname>element</classname>
						or
						<classname>attribute</classname>
					</entry>
					<entry>
						<classname>attribute</classname>
					</entry>
					<entry>-</entry>
				</row>
