                    </entry>
                    <entry>
                        <classname>false</classname>
                        or
                        <classname>true</classname>
                    </entry>
                    <entry>
                        <classname>false</classname>
                    </entry>
                    <entry>
                        <emphasis role="bold">1.1</emphasis>
