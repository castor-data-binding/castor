   <xsd:group name="group1">
      <xsd:all>
          <xsd:element name="elem1" type="xsd:string"/>
          <xsd:element name="elem2" type="xsd:string"/>
      </xsd:all>
   </xsd:group>

   <!-- basic group definition : choice -->
   <xsd:group name="group2">
      <xsd:choice>
          <xsd:element name="elem1" type="xsd:string"/>
