
<mapping>

        <class name="Get_Root">
                <map-to xml="get-root"/>

                <field name="Id"
                       type="string"> 
                        <bind-xml name="Id" node="element"/>
                </field>

                <field name="Name"
                       get-method="getName"
                       type="string"> 
                        <bind-xml name="Name" node="element"/>
                </field>

                <field name="Value"
                       get-method="getValue"
                       type="integer"> 
                        <bind-xml name="Value" node="element"/>
                </field>
        </class>

</mapping>