    <!--  !!! this is a template only !!! -->

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.codehaus.castor</groupId>
    <artifactId>castor-xml-schema</artifactId>
    <version>1.2.1-SNAPSHOT</version>
    
    <!-- 
