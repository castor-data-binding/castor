<!DOCTYPE databases PUBLIC "-//EXOLAB/Castor JDO Configuration DTD Version 1.0//EN"
                           "http://castor.org/jdo-conf.dtd">
<jdo-conf>
    <database name="soak" engine="mysql">
        <data-source class-name="com.mysql.jdbc.jdbc2.optional.MysqlConnectionPoolDataSource">
            <param name="url" value="jdbc:mysql://localhost/soak"/>
            <param name="user" value="test"/>
            <param name="password" value="test" />
        </data-source>
        <mapping href="mapping.xml" />
    </database>
   <transaction-demarcation mode="local" />
</jdo-conf>
