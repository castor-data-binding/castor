            <Name>Test Generation</Name>
            <Input>input.xml</Input>
            <GoldFile>input.xml</GoldFile>
        </UnitTestCase>
        <UnitTestCase>
            <Name>Test Generation With Wrong Input</Name>
            <Input>input-wrong.xml</Input>
            <Failure>true</Failure>
        </UnitTestCase>
