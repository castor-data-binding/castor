    <case class="jdo.DuplicateKey" />
    <case class="jdo.ReadOnly" />
    <case class="jdo.Join" />
    <case class="jdo.TypeHandling" />
    <case class="jdo.KeyGenGeneric" />
    <case class="jdo.KeyGenSequence" />
    <!--case class="jdo.CacheLeakage" /-->
    <!--case class="jdo.Race" /-->
    <case class="jdo.Persistent" name="TC16" />
    <case class="jdo.NestedFields" name="TC11" />
    <case class="jdo.Dependent" name="TC15" />
    <!--Only for JDK 1.2
    <case class="jdo.Collections" name="TC19" />
    -->
  </category>

  <category name="mysql" class="jdo.JDOCategory">
    <description>JDO tests for MySQL</description>
    <jdo database-name="mysql" configuration="mysql.xml" />
    <case class="jdo.Concurrent" name="TC01" />
    <case class="jdo.Deadlock" name="TC02" />
    <case class="jdo.DuplicateKey" name="TC03" />
    <case class="jdo.ReadOnly" name="TC04" />
