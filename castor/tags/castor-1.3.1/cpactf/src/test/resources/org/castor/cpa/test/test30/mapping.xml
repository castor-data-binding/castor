<?xml version="1.0" ?>
<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Mapping DTD Version 1.0//EN"
                           "http://castor.org/mapping.dtd">
<mapping>
  <class name="org.castor.cpa.test.test30.Entity" access="shared" identity="id">
    <map-to table="test30_entity" />
    <field name="id" type="integer">
      <sql name="id" type="integer" />
    </field>
    <field name="value1" type="string" required="true">
      <sql name="value1" type="varchar"/>
    </field>
    <field name="value2" type="string">
      <sql name="value2" type="varchar" dirty="ignore"/>
    </field>
  </class>
  
  <class name="org.castor.cpa.test.test30.ExtendsEntity" access="shared" extends="org.castor.cpa.test.test30.Entity">
    <map-to table="test30_extends" />
    <field name="value3" type="string">
      <sql name="value3" type="varchar"/>
    </field>
    <field name="value4" type="string">
      <sql name="value4" type="varchar" dirty="ignore"/>
    </field>
  </class>

  <class name="org.castor.cpa.test.test30.GroupEntity" access="shared" identity="id">
    <map-to table="test30_group" />
    <field name="id" type="integer">
      <sql name="id" type="numeric" />
    </field>
    <field name="value1" type="string"  required="true">
      <sql name="value1" type="varchar" />
    </field>
  </class>
</mapping>
