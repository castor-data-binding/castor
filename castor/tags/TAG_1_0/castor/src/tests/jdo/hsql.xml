<?xml version="1.0" ?>
<!DOCTYPE jdo-conf PUBLIC "-//EXOLAB/Castor JDO Configuration DTD Version 1.0//EN"
                           "http://castor.org/jdo-conf.dtd">

<jdo-conf>
    <database name="hsql" engine="hsql" >
        <driver url="jdbc:hsqldb:hsql://localhost/test" class-name="org.hsqldb.jdbcDriver">
