<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema">
<xsd:element name="restrict-simple">
  <xsd:complexType>
    <xsd:sequence>
      <xsd:element name="restrict-float" minOccurs="0">
        <xsd:simpleType>
          <xsd:restriction base="xsd:float">
            <xsd:maxInclusive value="1.0"/>
            <xsd:minInclusive value="0.0"/>
          </xsd:restriction>
        </xsd:simpleType>
      </xsd:element>
    </xsd:sequence>
  </xsd:complexType>
</xsd:element>
</xsd:schema>
