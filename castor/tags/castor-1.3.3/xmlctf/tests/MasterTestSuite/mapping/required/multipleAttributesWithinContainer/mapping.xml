<?xml version="1.0"?>

<mapping>

	<class name="Kennel">
		<map-to xml="kennel" />

		<field name="dogs" collection="arraylist" type="Dog"
			container="false">
		</field>
	</class>

	<class name="Dog">
		<map-to xml="dog" />

		<field name="colour" type="string" required="true">
			<bind-xml node="attribute" />
		</field>

		<field name="bark" type="string" required="true">
			<bind-xml node="attribute" />
		</field>

	</class>

</mapping>