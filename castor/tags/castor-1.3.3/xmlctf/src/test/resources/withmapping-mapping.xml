<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Mapping DTD Version 1.0//EN"
                         "http://castor.org/mapping.dtd">
<mapping>

	<class name="org.castor.xmlctf.bestpractise.withmapping.Node" identity="nodeNum">
		<map-to xml="node" />
		<field name="nodeNum" type="integer">
			<bind-xml name="node-num" node="attribute" />
		</field>
		<field name="siblings" type="org.castor.xmlctf.bestpractise.withmapping.Node" collection="collection">
			<bind-xml name="sibling" reference="true" />
		</field>
	</class>

	<class name="org.castor.xmlctf.bestpractise.withmapping.NodeList">
		<map-to xml="node-list" />
		<field name="nodes" type="org.castor.xmlctf.bestpractise.withmapping.Node" collection="arraylist">
			<bind-xml name="node" />
		</field>
	</class>

</mapping>